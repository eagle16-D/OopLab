package hust.soict.sec.javafx;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class Painter extends Application {

	@SuppressWarnings("exports")
	@Override
	public void start(Stage stage) throws Exception{
		Parent rootParent = FXMLLoader.load(getClass().getResource("/hust/soict/sec/javafx/Painter.fxml"));
		
		Scene scene = new Scene(rootParent);
		stage.setTitle("Painter");
		stage.setScene(scene);
		stage.show();
	}
	
	private void activateEraser() {
	    // Set the pen color to white (same as canvas color)
	    graphicsContext.setStroke(Color.WHITE);
	    graphicsContext.setLineWidth(eraserSize); // Set the eraser size as needed
	}

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		launch(args);
	}

}
